<h1>Listing job_applications</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tr class="Header">
      <th>Title</th>
      <th>Job Name</th>
      <th>Account</th>
      <th>Created</th>
   </tr>
  <tbody>
    <% @job_applications.each do |job_application| %>
      <tr>
        <td><%= truncate(job_application.cover_letter) %>&nbsp &nbsp</td>
        <td><%= job_application.job.title %></td>
        <td><%= job_application.created_at.strftime("%b %d") %></td>
        <td><%= link_to 'Show', job_application %></td>
        <td><%= link_to 'Edit', edit_job_application_path(job_application) %></td>
        <td><%= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

