<p id="notice"><%= notice %></p>

<table summary="Company detail view">
		<tr>
			<th> Title:</th>
			<td> <%= @job.title %></td>
		</tr>

		

		<tr>
			<th> Address:</th>
			<td> <%= @job.address %></td>
		</tr>

		

		<tr>
			<th> Description:</th>
			<td> <%= simple_format(@job.description) %></td>
		</tr>

		<tr>
			<th> Latitude:</th>
			<td> <%= @job.latitude %></td>
		</tr>

		<tr>
			<th> Longitude:</th>
			<td> <%= @job.longitude %></td>
		</tr>

		<tr>
			<th> Created:</th>
			<td> <%= @job.created_at.strftime("%B %d at %I:%M%p %Z") %></td>
		</tr>
</table>
<%= link_to 'Applicants', job_applications_path(:job_id => @job.id)%> |
<% unless @job.link.empty?%>
	<%= link_to 'Apply',  "http://#{@job.link}"  %>
<% else%>
	<%= link_to 'Apply', new_job_application_path(:job_id => @job.id) %> 
<%end%>|

<% if can? :update, @job %>
	<%= link_to 'Edit', edit_job_path(@job) %> |
<%end%>

<%if can? :destroy, @job%>
	<td><%= link_to 'Destroy', @job, method: :delete, data: { confirm: 'Are you sure?' } %> |</td>
<%end%>
<%= link_to 'Back', jobs_path %>
